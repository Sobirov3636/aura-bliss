<%- include('includes/header') %>

<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
  integrity="sha512-iIvqHpEXKx6wjKVF1N2Ikzc4tRp+Q81vCW74Ft10l5STyOiYNs6qlTfA6B+gUZikVkbfoifPc5s5gmxRfJaCrg=="
  crossorigin="anonymous"
  referrerpolicy="no-referrer"
/>
<link rel="stylesheet" type="text/css" href="/css/login.css" />

<body>
  <div class="form-container">
    <h3 class="title">Login</h3>
    <form action="/admin/login" METHOD="POST" class="form-horizontal">
      <div class="form-icon">
        <img src="/img/userIcon.png" alt="" />
      </div>
      <div class="form-group">
        <span class="input-icon"><img src="/img/user.svg" alt="" /></span>
        <input type="text" name="memberNick" class="form-control" placeholder="Username" value="" required />
      </div>
      <div class="form-group">
        <span class="input-icon"><img src="/img/lock.svg" alt="" /></span>
        <input type="password" name="memberPassword" class="form-control" placeholder="Password" value="" required />
      </div>
      <button class="btn signin" name="login" type="submit">Login</button>
      <div class="signup-bottom">
        <p>
          Not registered yet?
          <a href="/admin/signup" style="color: #6440fb; text-decoration: none">Signup</a>
        </p>
      </div>
    </form>
  </div>
</body>

<%- include('includes/footer') %>
